<core:FragmentDefinition
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog id="SH1">
        <content>
            <form:SimpleForm id="SH2">
                <form:content>
                    <Label id="SH3" text="Shipper ID" />
                    <Input id="ShipperID"/>
                    <Label id="SH4" text="Company Name" />
                    <Input id="CompanyName" />
                    <Label id="SH5" text="Phone" />
                    <Input id="Phone" />
                </form:content>
            </form:SimpleForm>
        </content>
        <Toolbar id="SH6" >
        <ToolbarSpacer id="SH7" ></ToolbarSpacer>
        <Button id="SH8" text="Confirm" type="Accept" press="onConfirm"/>
        <Button id="SH9" text="Cancel" type="Critical" press="onCancelButton"/>
        </Toolbar>
    </Dialog>
</core:FragmentDefinition>
 