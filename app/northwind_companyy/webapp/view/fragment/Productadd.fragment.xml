<core:FragmentDefinition
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog contentWidth="800px">
        <content>
            <form:SimpleForm>
                <form:content>
                    <Label text="ProductID" />
                    <Input id="ProductID" />
                    <Label text="ProductName" />
                    <Input id="ProductName" />
                    <Label text="SupplierID" />
                    <Input id="SupplierID" />
                    <Label text="CategoryID" />
                    <Input id="CategoryID" />
                    <Label text="QuantityPerUnit" />
                    <Input id="QuantityPerUnit" />
                    <Label text="UnitPrice" />
                    <Input id="UnitPrice" />
                    <Label text="UnitsInStock" />
                    <Input id="UnitsInStock" />
                    <Label text="UnitsOnOrder" />
                    <Input id="UnitsOnOrder" />
                    <Label text="ReorderLevel" />
                    <Input id="ReorderLevel" />
                    <Label text="Discontinued" />
                    <Input id="Discontinued" /> 
                   
                </form:content>
            </form:SimpleForm>
        </content>
        <Toolbar>
            <ToolbarSpacer />
            <Button
                text="Confirm"
                type="Accept"
                press="confirmOrder"
            />
            <Button
                text="Cancel"
                type="Critical"
                press="onCancel"
            />
        </Toolbar>
    </Dialog>
</core:FragmentDefinition>