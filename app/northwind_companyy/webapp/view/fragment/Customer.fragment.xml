<core:FragmentDefinition
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog contentWidth="800px">
          <content>
            <form:SimpleForm>
                <form:content>
                    <Label text="Customer ID"/>
                <Input id="inputCustomerID" />
                <Label text="Company Name"/>
                <Input id="inputCompanyName"/>
                <Label text="Contact Name"/>
                <Input id="inputContactName" />
                <Label text="Contact Title"/>
                <Input id="inputContactTitle"/>
                <Label text="Address"/>
                <Input id="inputAddress"/>
                <Label text="City"/>
                <Input id="inputCity" />
                <Label text="Region"/>
                <Input id="inputRegion" />
                <Label text="Postal Code"/>
                <Input id="inputPostalCode" />
                <Label text="Country"/>
                <Input id="inputCountry"/>
                <Label text="Phone"/>
                <Input id="inputPhone" />
                <Label text="Fax"/>
                <Input id="inputFax"/>
                </form:content>
            </form:SimpleForm>
        </content>
        <Toolbar >
        <ToolbarSpacer ></ToolbarSpacer>
        <Button text="Confirm" type="Accept" press="confirmOrder"/>
        <Button text="Cancel" type="Critical" press="onCancelOrder"/>
        </Toolbar>
      
    </Dialog>
</core:FragmentDefinition>
 