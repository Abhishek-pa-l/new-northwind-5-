<mvc:View
    controllerName="com.sap.northwindcompanyy.controller.Sales_amount"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:viz.data="sap.viz.ui5.data"
>
    <App id="_IDGenApp1">
        <Page id="_IDGenPage1" title="Sales Total By Amounts">
            <content>
                <viz:VizFrame
                    id="oVizFrame"
                    vizType="bar"
                    uiConfig="{ 'applicationSet': 'fiori' }"
                    width="100%"
                    height="400px" 
                >
                    <viz:dataset>
                        <viz.data:FlattenedDataset
                            data="{/Sales_Totals_by_Amounts}"
                        >
                            <viz.data:dimensions>
                                <viz.data:DimensionDefinition name="CategoryName" value="{CompanyName}" />
                            </viz.data:dimensions>
                            <viz.data:measures>
                                <viz.data:MeasureDefinition name="TotalSales" value="{SaleAmount}" />
                            </viz.data:measures>
                        </viz.data:FlattenedDataset>
                    </viz:dataset>
                    <viz:feeds>
                        <viz.feeds:FeedItem uid="categoryAxis" type="Dimension" values="CategoryName" />
                        <viz.feeds:FeedItem uid="valueAxis" type="Measure" values="TotalSales" />
                    </viz:feeds>
                </viz:VizFrame>
            </content>
        </Page>
    </App>
</mvc:View>
